    <script></script>

    <style>
      .main-container {
        margin-left: auto;
        margin-right: auto;
        max-width: 750px;
        height: 100%;
        background-color: var(--color-surface);
        transition:
          background-color 0.3s,
          border-color 0.3s;
        color: var(--color-text);
      }

      a {
        font-size: 1.3rem;
        color: var(--color-text-secondary);
      }

      .social-icons {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
        margin-top: 1rem;
      }

      .bottom-icons {
        cursor: pointer;
      }

      :global(html.dark) .bottom-icons {
        fill: var(--color-text);
      }

      :global(html.dark) .bottom-icons:hover {
        fill: var(--color-text-secondary);
      }

      .bottom-icons:hover {
        fill: var(--color-text-secondary);
      }

      :global(html.dark) a {
        color: var(--color-text-secondary);
      }

      @media (max-width: 500px) {
        a {
          font-size: 0.9rem;
        }
      }
