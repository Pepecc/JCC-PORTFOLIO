  <style>
    .main-container {
      margin-left: auto;
      margin-right: auto;
      max-width: 750px;
      height: 100vh;
      background-color: var(--color-surface);
      transition:
        background-color 0.3s,
        border-color 0.3s;
      color: var(--color-text);
    }
    .project-card {
      margin-bottom: 2rem;
    }
    .links-container {
      display: flex;
      flex-direction: column;
    }

    .link,
    .link-disabled {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      cursor: pointer;
    }

    .bottom-icons-disabled,
    .link-disabled {
      pointer-events: none;
      color: darkgrey;
    }

    .bottom-icons:hover {
      fill: var(--color-text-secondary);
    }
    .link:hover {
      color: var(--color-text-secondary);
    }

    :global(html.dark) .bottom-icons {
      fill: var(--color-text);
    }

    :global(html.dark) .bottom-icons:hover {
      fill: var(--color-text-secondary);
    }

    a {
      text-decoration: none;
      color: var(--color-text);
    }

    @media (max-width: 500px) {
      .link,
      .link-disabled {
        font-size: 0.7rem;
      }
    }
  </style>
</Layout>
