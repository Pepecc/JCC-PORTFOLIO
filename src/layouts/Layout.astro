---
import TopBar from '../components/TopBar.astro';
import BottomBar from '../components/BottomBar.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi portfolio - Josep Company</title>
    <ClientRouter />
  </head>
  <body>
    <TopBar />
    <main transition:animate="fade">
      <slot />
    </main>
    <BottomBar />
  </body>
</html>

<script is:inline>
  function applyAppTheme() {
    const getTheme = () => {
      if (localStorage.getItem('app-theme')) {
        return localStorage.getItem('app-theme') || '';
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'light';
    };

    const appTheme = getTheme();
    if (appTheme === 'dark') {
      document.documentElement.classList.add('dark');
    }
  }

  applyAppTheme();

  document.addEventListener('astro:after-swap', applyAppTheme);
</script>

<style is:global>
  :root {
    --color-bg: #ffffff;
    --color-surface: #f5f5f5;
    --color-text: #1a1a1a;
    --color-text-secondary: #666666;
    --color-border: #e0e0e0;
    --color-hover: #f0f0f0;
    --color-primary: #0066cc;
    --color-primary-hover: #0052a3;
  }

  html.dark {
    --color-bg: hsl(208 96% 16% / 1);
    --color-surface: hsl(208 96% 16% / 1);
    --color-text: #ffffff;
    --color-text-secondary: #b0b0b0;
    --color-border: #404040;
    --color-hover: #333333;
    --color-primary: #4d9fff;
    --color-primary-hover: #3385ff;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-surface);
    transition:
      background-color 0.3s,
      border-color 0.3s;
    font-family:
      Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
  }
</style>
