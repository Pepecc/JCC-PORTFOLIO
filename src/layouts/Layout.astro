---
import TopBar from '../components/TopBar.astro';
import BottomBar from '../components/BottomBar.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = 'Portfolio de Josep Company Cuesta, desarrollador full-stack especializado en Node.js, React y Astro. Explora mis proyectos y experiencia.',
  image = '/og-image.jpg',
} = Astro.props;

const siteUrl = 'https://jcc-dev.onrender.com/';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

const personalInfo = {
  name: 'Josep Company Cuesta',
  jobTitle: 'Desarrollador Web Full Stack',
  email: 'jcc.dev@outlook.com',
  github: 'https://github.com/Pepecc',
  linkedin: 'https://www.linkedin.com/in/josep-c-229b561b5/',
  skills: [
    'JavaScript',
    'React',
    'Astro',
    'Node.js',
    'TypeScript',
    'CSS',
    'Kubernetes',
    'Docker',
    'Azure',
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta
      name="google-site-verification"
      content="-wRtHIZU5maj8GU8_Hwm-v4OrTvpO-FQbkeG1CowVdE"
    />
    <meta name="description" content={description} />
    <meta name="author" content={personalInfo.name} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:image" content={new URL(image, siteUrl)} />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi portfolio - Josep Company</title>
    <ClientRouter />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: personalInfo.name,
        jobTitle: personalInfo.jobTitle,
        url: siteUrl,
        email: personalInfo.email,
        sameAs: [personalInfo.github, personalInfo.linkedin],
        knowsAbout: personalInfo.skills,
      })}
    />
  </head>
  <body>
    <TopBar />
    <main transition:animate="fade">
      <slot />
    </main>
    <BottomBar />
  </body>
</html>

<script is:inline>
  function applyAppTheme() {
    const getTheme = () => {
      if (localStorage.getItem('app-theme')) {
        return localStorage.getItem('app-theme') || '';
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'light';
    };

    const appTheme = getTheme();
    if (appTheme === 'dark') {
      document.documentElement.classList.add('dark');
    }
  }

  applyAppTheme();

  document.addEventListener('astro:after-swap', applyAppTheme);
</script>

<style is:global>
  :root {
    --color-bg: #ffffff;
    --color-surface: #f5f5f5;
    --color-surface-header: hsl(0°, 0%, 96% / 0.8);
    --color-surface-border: hsl(0°, 0%, 96% / 0.2);
    --color-text: #1a1a1a;
    --color-text-secondary: #666666;
    --color-border: #e0e0e0;
    --color-hover: #f0f0f0;
    --color-primary: #0066cc;
    --color-primary-hover: #666666;
    --color-card-hover: #dbdbdb;
  }

  html.dark {
    --color-bg: hsl(208 96% 16% / 1);
    --color-surface: hsl(208 96% 16% / 1);
    --color-surface-header: hsl(208 96% 16% / 0.9);
    --color-surface-border: hsl(208 96% 16% / 0.2);
    --color-text: #ebe2cf;
    --color-text-secondary: #ffad09;
    --color-border: #404040;
    --color-hover: #333333;
    --color-primary: #4d9fff;
    --color-primary-hover: #ffad09;
    --color-card-hover: #023664;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-surface);
    transition:
      background-color 0.3s,
      border-color 0.3s;
    font-family:
      Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
  }

  h1,
  h2 {
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
  }

  h3 {
    font-size: 1rem;
  }

  p {
    font-size: 0.9rem;
    text-align: justify;
  }

  li {
    font-size: 0.9rem;
    text-align: justify;
  }

  a {
    text-decoration: none;
  }

  @media (max-width: 500px) {
    li {
      font-size: 0.7rem;
    }
    p {
      font-size: 0.7rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1rem;
    }
    h3 {
      font-size: 0.9rem;
    }

    nav li {
      font-size: 0.7rem;
    }

    span {
      font-size: 0.7rem;
    }

    body {
      padding-left: 0.4rem;
      padding-right: 1rem;
    }
  }
</style>
