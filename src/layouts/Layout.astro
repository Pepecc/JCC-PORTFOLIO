---
import TopBar from '../components/TopBar.astro';
import BottomBar from '../components/BottomBar.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi portfolio - Josep Company</title>
    <ClientRouter />
  </head>
  <body>
    <TopBar />
    <main transition:animate="fade">
      <slot />
    </main>
    <BottomBar />
  </body>
</html>

<script is:inline>
  function applyAppTheme() {
    const getTheme = () => {
      if (localStorage.getItem('app-theme')) {
        return localStorage.getItem('app-theme') || '';
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'light';
    };

    const appTheme = getTheme();
    if (appTheme === 'dark') {
      document.documentElement.classList.add('dark');
    }
  }

  applyAppTheme();

  document.addEventListener('astro:after-swap', applyAppTheme);
</script>

<style is:global>
  :root {
    --color-bg: #ffffff;
    --color-surface: #f5f5f5;
    --color-text: #1a1a1a;
    --color-text-secondary: #666666;
    --color-border: #e0e0e0;
    --color-hover: #f0f0f0;
    --color-primary: #0066cc;
    --color-primary-hover: #666666;
    --color-card-hover: #dbdbdb;
  }

  html.dark {
    --color-bg: hsl(208 96% 16% / 1);
    --color-surface: hsl(208 96% 16% / 1);
    --color-text: #ebe2cf;
    --color-text-secondary: #ffad09;
    --color-border: #404040;
    --color-hover: #333333;
    --color-primary: #4d9fff;
    --color-primary-hover: #ffad09;
    --color-card-hover: #023664;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-surface);
    transition:
      background-color 0.3s,
      border-color 0.3s;
    font-family:
      Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
  }

  h1,
  h2 {
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
  }

  h3 {
    font-size: 1rem;
  }

  p {
    font-size: 0.9rem;
    text-align: justify;
  }

  li {
    font-size: 0.9rem;
    text-align: justify;
  }

  a {
    text-decoration: none;
  }

  @media (max-width: 500px) {
    li {
      font-size: 0.7rem;
    }
    p {
      font-size: 0.7rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1rem;
    }
    h3 {
      font-size: 0.9rem;
    }

    nav li {
      font-size: 0.7rem;
    }

    span {
      font-size: 0.7rem;
    }

    body {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
